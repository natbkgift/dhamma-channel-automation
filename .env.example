# FlowBiz Standard Environment Variables
APP_SERVICE_NAME="dhamma-automation"
APP_ENV="dev"
APP_LOG_LEVEL="INFO"
APP_CORS_ORIGINS='["*"]'
FLOWBIZ_VERSION="0.0.0"
FLOWBIZ_BUILD_SHA="dev"

# การตั้งค่าแอปพลิเคชัน (Legacy - for backwards compatibility)
APP_NAME="dhamma-automation"
LOG_LEVEL="INFO"
